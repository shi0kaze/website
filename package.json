{
  "name": "shiokaze-office",
  "fullname": "行政書士 しおかぜ事務所",
  "description": "福岡市西区にある行政書士事務所のウェブサイトです。",
  "version": "1.0.0",
  "author": "linyows",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .ts,.js,.vue .",
    "test": "jest"
  },
  "dependencies": {
    "@nuxtjs/bulma": "^1.2.1",
    "nuxt": "^2.0.0",
    "nuxt-property-decorator": "^2.3.0",
    "ts-node": "^8.3.0"
  },
  "devDependencies": {
    "@nuxt/typescript": "^2.8.1",
    "@nuxtjs/eslint-config-typescript": "^0.1.2",
    "@types/jest": "^24.0.17",
    "@vue/test-utils": "^1.0.0-beta.27",
    "eslint": "^5.0.0",
    "jest": "^24.0.0",
    "jest-serializer-vue": "^2.0.2",
    "ts-jest": "^24.0.2",
    "vue-jest": "^4.0.0-0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": ["js", "vue", "json", "ts"],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleDirectories": ["node_modules"],
    "modulePathIgnorePatterns": ["/node_modules/"],
    "testMatch": [
      "**/test/**/*.(spec|test).(js|ts)|**/__tests__/*.(js|ts)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/components/*.vue",
      "<rootDir>/pages/**/*.vue"
    ]
  }
}
